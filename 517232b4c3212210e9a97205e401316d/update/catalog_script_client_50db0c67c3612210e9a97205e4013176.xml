        <script><![CDATA[function onSubmit() {
    var valid = true;
 
    var nome = g_form.getValue('first_name'); 
    var cognome = g_form.getValue('last_name');
    var regex = /^[A-Za-zÀ-ÿ]+(?: [A-Za-zÀ-ÿ]+)*$/;
 
    if (nome && !regex.test(nome)) {
       g_form.addErrorMessage('Il nome può contenere solo lettere.');
        valid = false;
    }
 
    if (cognome && !regex.test(cognome)) {
        g_form.addErrorMessage( 'Il cognome può contenere solo lettere.');
        valid = false;
    }
 
    return valid;
}
